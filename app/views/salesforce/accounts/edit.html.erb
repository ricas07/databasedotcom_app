<h1>Editing Task  <%= @account.Name %> </h1>

<% form_for @account do |f| %>
    <div class="field">
        <%= f.label :Name %><br />
        <%= f.text_field :Name %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>

<br/>

<%= link_to 'Show', salesforce_account_path(@account) %> |
<%= link_to 'Back', salesforce_accounts_path %> |
<%= link_to 'Delete', @account, :confirm => 'Are you sure?', :method => :delete %>