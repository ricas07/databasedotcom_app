<% if flash[:notice] %>
  <%= flash[:notice] %><br/><br/>
<% end %>

<%= link_to 'New', new_task_path(@task) %> |
<%= link_to 'Back', tasks_path %> 	
<br/>
<br/>

<ul>

<% @tasks.each do |task| %>
<% if task.Status != "Completed" %>
	<li>ID: <%= link_to "#{task.Id}", task %> Subject: <%= "#{task.Subject}" %> Status: <%= "#{task.Status}" %></li>
<% end %>
<% end %>
</ul>