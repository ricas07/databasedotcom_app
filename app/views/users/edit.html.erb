<h1>Editing user  <%= @user.Name %> </h1>

<%= form_for @user do |f| %>
    <div class="field">
        <%= f.label :CompanyName %><br />
        <%= f.text_field :CompanyName %>
    </div>
    <div class="field">
        <%= f.label :FirstName %><br />
        <%= f.text_field :FirstName %>
    </div>
    <div class="field">
        <%= f.label :LastName %><br />
        <%= f.text_field :LastName %>
    </div>
    <div class="field">
        <%= f.label :Phone %><br />
        <%= f.text_field :Phone %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
<% end %>

<br/>

<%= link_to 'Show', @user %> |
